<div class="flex justify-center">
  <div class="w-full" style="inline-size: 80%; max-inline-size: 90%; @media (min-width: 40rem) { max-inline-size: 30rem; }">
    <%= form_with model: feedback_message, url: feedback_path, method: :post, data: { turbo: true, controller: "feedback-form"}, class: "grid gap-4" do |f| %>
       <div class="flex flex-col p-2 gap-half">
          <%= f.label :name, "Nombre" %>
          <%= f.text_field :name,
            class: "input w-full",
            placeholder: "Ingresa tu nombre",
            data: { "feedback-form-target": "name", action: "input->feedback-form#validate" } %>
        </div>

        <div class="flex flex-col p-2 gap-half">
          <%= f.label :email, "Correo" %>
          <%= f.email_field :email,
                class: "input w-full",
                placeholder: "ejemplo@correo.com",
                data: { "feedback-form-target": "email", action: "input->feedback-form#validate" } %>
        </div>

        <div class="flex flex-col p-3 gap-half">
          <%= f.label :message, "Comentario" %>
          <%= f.text_area :message,
                class: "input w-full",
                rows: 5,
                placeholder: "Escribe tu comentario aquí...",
                data: { "feedback-form-target": "message", action: "input->feedback-form#validate" } %>
        </div>
        
        <p class="text-sm text-center mb-2" data-feedback-form-target="infoMessage">
          <span class="inline-flex items-center flex-wrap justify-center">
            <%= lucide_icon "info", class: "mb-2" %>
            <span>
              Todos los campos son requeridos. 
              <span>El botón se habilitará cuando completes todos los campos correctamente.</span>
            </span>
          </span>
        </p>

        <div class="btn-submit-feedback">
          <%= f.submit "Enviar comentario",
                class: "btn btn--positive btn--animated",
                data: { "feedback-form-target": "submit" },
                disabled: true %>
        </div>

    <% end %>
  </div>
</div>
