<%= form_with(model: [:admin, media_item], class: "space-y-6") do |form| %>
  <% if media_item.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold"><%= pluralize(media_item.errors.count, "error") %> prohibited this media_item from being saved:</strong>
      <ul class="mt-2 list-disc list-inside">
        <% media_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :category, "Category (e.g., 'home' for carousel)", class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :category, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    <p class="mt-2 text-sm text-gray-500">Use 'home' to make this image appear in the main page carousel.</p>
  </div>
  
  <div>
    <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :description, rows: 4, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <div>
    <%= form.label :file, class: "block text-sm font-medium text-gray-700" %>
    <% if media_item.file.attached? %>
      <div class="my-4">
        <p class="text-sm text-gray-600">Current file:</p>
        <%= image_tag media_item.file, class: "h-32 w-auto rounded-md" if media_item.file.image? %>
      </div>
    <% end %>
    <%= form.file_field :file, class: "mt-1 block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 focus:outline-none" %>
  </div>

  <div class="flex items-center justify-end gap-4">
    <%= link_to "Cancel", admin_media_items_path, class: "btn--secondary" %>
    <%= form.submit class: "btn btn--primary" %>
  </div>
<% end %> 