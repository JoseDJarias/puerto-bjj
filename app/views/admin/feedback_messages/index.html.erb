<%# Main container for feedback messages %>
<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col gap mb-6">
    <%# Primera fila: Título  %>
    <div class="flex justify-between items-center">
      <h1 class="text-2xl font-bold">Mensajes de Contacto</h1>
    
    </div>

    <%# Segunda fila: Barra de búsqueda %>
    <div class="flex gap">
      <div class="flex-1">
        <%= form_with url: admin_feedback_messages_path, 
            method: :get, 
            class: "search-form",
            data: { 
              controller: "search",
              action: "keydown->search#submit",
              turbo_frame: "feedback-messages-table"
            } do |f| %>
          
          <%# Mantener otros parámetros %>
          <%= f.hidden_field :per_page, value: @per_page %>
          
          <div class="search-input-wrapper">
            <%= f.search_field :q, 
                value: params[:q],
                placeholder: "Buscar por nombre, email o mensaje...",
                class: "search-input",
                data: { search_target: "input" } %>
            
            <div class="search-actions">
              <% if params[:q].present? %>
                <%= link_to admin_feedback_messages_path(per_page: @per_page), 
                    class: "search-clear",
                    data: { action: "search#clear" } do %>
                  <%= lucide_icon "x", class: "w-4 h-4" %>
                <% end %>
              <% end %>
              
              <%= button_tag type: "submit", 
                  class: "search-submit",
                  data: { action: "search#submit" } do %>
                <%= lucide_icon "search", class: "w-4 h-4" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <%# Flash messages container %>
  <div id="flash-messages">
    <%= render "shared/flash" %>
  </div>

  <%# Render the table partial %>
  <%= render "table", messages: @messages %>

    
  <div class="flex items-center gap">
    <span class="text-sm ">Mostrar:</span>
    <div class="flex gap">
      <% [5, 10, 20, 50].each do |per_page| %>
        <%= link_to per_page, 
            admin_feedback_messages_path(per_page: per_page, page: 1, q: params[:q]), 
            class: "btn btn--sm #{@per_page == per_page ? 'btn--positive' : 'btn--plain'}" %>
      <% end %>
    </div>
  </div>

  <%# Pagination %>
  <div class="mt-4 flex justify-center">
    <div class="pagination-wrapper">
      <%= paginate @messages %>
    </div>
  </div>
</div>

<%# Estilos para la búsqueda %>
<style>
  .search-form {
    inline-size: 100%;
  }

  .search-input-wrapper {
    position: relative;
    inline-size: 100%;
    display: flex;
    align-items: center;
  }

  .search-input {
    inline-size: 100%;
    padding: var(--size-3);
    padding-inline-end: var(--size-16);
    border: 1px solid var(--color-border);
    border-radius: var(--rounded-md);
    background-color: var(--color-surface);
    color: var(--color-text);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px var(--color-primary-alpha);
  }

  .search-actions {
    position: absolute;
    inset-inline-end: var(--size-3);
    inset-block-start: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: var(--size-2);
    align-items: center;
  }

  .search-clear,
  .search-submit {
    padding: var(--size-1);
    color: var(--color-text-muted);
    border-radius: var(--rounded-full);
    cursor: pointer;
    background: none;
    border: none;
  }

  .search-clear:hover,
  .search-submit:hover {
    background-color: var(--color-surface-hover);
    color: var(--color-text);
  }
</style>

<%# Estilos específicos para la tabla %>
<style>
  .table-container {
    margin: var(--size-4) 0;
    overflow-x: auto;
    border-radius: var(--rounded-lg);
    box-shadow: var(--shadow-md);
  }

  .table {
    inline-size: 100%;
    border-collapse: collapse;
    background-color: var(--color-surface);
  }

  .table th,
  .table td {
    padding: var(--size-3);
    text-align: start;
    border-block-end: 1px solid var(--color-border);
  }

  .table th {
    background-color: var(--color-surface-alt);
    font-weight: var(--font-semibold);
    color: var(--color-text-alt);
  }

  .table tbody tr:hover {
    background-color: var(--color-surface-hover);
  }

  .btn--sm {
    padding: var(--size-2) var(--size-3);
    font-size: var(--text-sm);
  }

  /* Estilos para la paginación */
  .pagination-wrapper {
    display: flex;
    align-items: center;
    gap: var(--size-2);
  }

  .pagination {
    display: flex;
    align-items: center;
    gap: var(--size-2);
  }

  .pagination .page {
    min-inline-size: var(--size-8);
    block-size: var(--size-8);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--size-2);
    border: 1px solid var(--color-border);
    border-radius: var(--rounded-md);
    background-color: var(--color-surface);
    color: var(--color-text);
    text-decoration: none;
  }

  .pagination .page:hover {
    background-color: var(--color-surface-hover);
  }

  .pagination .current {
    background-color: var(--color-primary);
    color: var(--color-surface);
    border-color: var(--color-primary);
  }

  .pagination .prev,
  .pagination .next {
    min-inline-size: var(--size-8);
    block-size: var(--size-8);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--size-2);
    border: 1px solid var(--color-border);
    border-radius: var(--rounded-md);
    background-color: var(--color-surface);
    color: var(--color-text);
    text-decoration: none;
  }

  .pagination .prev:hover,
  .pagination .next:hover {
    background-color: var(--color-surface-hover);
  }

  .pagination .disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  .pagination .gap {
    display: inline-flex;
    align-items: center;
    padding: var(--size-2);
    color: var(--color-text-muted);
  }
</style>
